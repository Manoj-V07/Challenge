{
  "manifest_version": 3,
  "name": "Gemini Code Helper",
  "version": "1.0",
  "description": "An AI-powered coding assistant right in your browser using Gemini Nano for ultimate privacy.",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "aiTextSession"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Gemini Code Helper"
  }
}
